<html>
  <!-- head -->
  <%- include('partials/head'); %>

  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Main -->
      <div id="main">
        <div class="inner">
          <!-- Header -->
          <%- include('partials/header'); %>

          <!-- Banner -->
          <section id="banner">
            <div class="content">
              <header class="major">
                <h2>Contribute</h2>
              </header>
              <p>
                You can send us your music to be shared with the community.
                Please get in touch and we will reach out to you soon. Thank
                you!
              </p>

              <!-- Contact form -->
              <%- include('partials/contact-form'); %>

              <p>You can also support Partitas Music by becoming a Patreon.</p>

              <ul class="actions">
                <li>
                  <a href="/profiles" target="_blank" class="button primary"
                    >Become a Patreon</a
                  >
                </li>
              </ul>

              <p>
                This website is an open source project. You can contribute with
                code by resolving an issue
                <a
                  href="https://github.com/marcospozzo/partitasmusic/issues"
                  target="_blank"
                  >here</a
                >.
              </p>
            </div>
            <span class="image object">
              <img src="./images/contribute.png" alt="music score with notes" />
            </span>
          </section>
        </div>
      </div>

      <!-- Sidebar -->
      <%- include('partials/sidebar'); %>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts'); %>
