<html lang="en">
  <!-- head -->
  <%- include('partials/head'); %>

  <body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">
      <!-- Main -->
      <div id="main">
        <div class="inner">
          <!-- Header -->
          <%- include('partials/header'); %>

          <section>
            <header class="major">
              <h2><%= title %></h2>
            </header>
            <p class="catalog-p">
              The music in this section was composed using the
              <a href="/the-tuning" rel="noopener">Guitar Craft Tuning</a>
              (CGDAEG) beginning in 1985 all the way through to the present day.
              <br />
              Traditionally, we write and share our compositions while engaged
              with guitars, often in residential courses. Most of that music was
              transmitted in person without any recordings or scores. So, the
              materials available here represent a portion of the music
              resulting from our work together.
            </p>

            <div class="contributors">
              <div class="contributors-column">
                <h3>Groups & Ensembles</h3>
                <% groups.forEach(function (group) { %>
                <div>
                  <a
                    class="contributor-card"
                    href="/contributors/<%= group.path %>"
                  >
                    <img
                      src="<%= group.picture %>"
                      alt="<%= group.name %>'s profile picture"
                    />
                    <%= group.name %>
                  </a>
                </div>
                <% }); %>
              </div>

              <div class="line"></div>

              <div class="individuals-column">
                <div>
                  <h3>Individuals</h3>
                </div>
                <div class="individuals-body">
                  <% individuals.forEach(function (individual) { %>
                  <div class="individuals-card">
                    <a
                      class="contributor-card"
                      href="/contributors/<%= individual.path %>"
                    >
                      <img
                        src="<%= individual.picture %>"
                        alt="<%= individual.name %>'s profile picture"
                      />
                      <%= individual.name %>
                    </a>
                  </div>
                  <% }); %>
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>

      <!-- Sidebar -->
      <%- include('partials/sidebar'); %>
    </div>

    <!-- Scripts -->
    <%- include('partials/scripts'); %>
  </body>
</html>
