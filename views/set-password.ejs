<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include('partials/head'); %>

  <body id="login-body">
    <div class="login-page">
      <img class="logo" src="/images/branding/logo-pm.png" alt="logo" />
      <div class="form">
        <!-- login form -->
        <form
          id="set-form"
          class="login-form"
          action="/users/set-password/<%= token %>"
          method="POST"
        >
          <%- include('partials/messages'); %>
          <input
            id="password"
            type="password"
            name="password"
            placeholder="new password"
            autocomplete="new-password"
            autofocus
            required
          />
          <input
            id="confirm"
            type="password"
            name="confirm"
            placeholder="confirm password"
            autocomplete="new-password"
            required
          />
          <button>set password</button>
        </form>
      </div>
    </div>
    <!-- Scripts -->
    <%- include('partials/scripts'); %>
  </body>
</html>
